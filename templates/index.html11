<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Strenger Pro | Premium Chat</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />

    <style>
        :root {
            --bg: #05060a;
            --panel: #11121a;
            --accent: #6c5ce7;
            --accent-light: #a29bfe;
            --text: #ffffff;
            --text-dim: #8e8e93;
            --danger: #ff3b30;
            --glass: rgba(255, 255, 255, 0.05);
            --glass-border: rgba(255, 255, 255, 0.1);
            --snap-pill: rgba(28, 28, 30, 0.95);
        }

        * {
            box-sizing: border-box;
            -webkit-tap-highlight-color: transparent;
        }

        body,
        html {
            margin: 0;
            padding: 0;
            background: var(--bg);
            color: var(--text);
            font-family: 'Inter', sans-serif;
            height: 100vh;
            overflow: hidden;
        }

        /* --- MOBILE SIDEBAR DRAWER SYSTEM --- */
        .app-container {
            display: flex;
            height: 100vh;
            width: 100vw;
            position: relative;
        }

        .sidebar {
            width: 340px;
            background: var(--panel);
            border-right: 1px solid var(--glass-border);
            display: flex;
            flex-direction: column;
            padding: 20px;
            z-index: 2000;
            transition: transform 0.4s cubic-bezier(0.19, 1, 0.22, 1);
        }

        /* Mobile View Sidebar Logic */
        @media (max-width: 850px) {
            .sidebar {
                position: fixed;
                height: 100%;
                transform: translateX(-100%);
                width: 85%;
                max-width: 320px;
            }

            .sidebar.active {
                transform: translateX(0);
                box-shadow: 20px 0 50px rgba(0, 0, 0, 0.8);
            }
        }

        .logo-area {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 25px;
        }

        .logo-box {
            display: flex;
            align-items: center;
            gap: 10px;
        }

        .logo-icon {
            width: 38px;
            height: 38px;
            background: var(--accent);
            border-radius: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-weight: 800;
            font-size: 1.2rem;
        }

        /* --- SNAP MAP UI --- */
        .map-card {
            height: 300px;
            border-radius: 24px;
            overflow: hidden;
            position: relative;
            border: 1px solid var(--glass-border);
            margin-bottom: 20px;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.4);
        }

        #map {
            height: 100%;
            width: 100%;
            background: #000;
        }

        .map-header {
            position: absolute;
            top: 12px;
            left: 50%;
            transform: translateX(-50%);
            z-index: 1000;
            background: var(--snap-pill);
            padding: 6px 16px;
            border-radius: 20px;
            font-size: 12px;
            font-weight: 600;
            border: 1px solid var(--glass-border);
            white-space: nowrap;
        }

        .snap-marker {
            display: flex;
            flex-direction: column;
            align-items: center;
            pointer-events: none;
        }

        .avatar-container {
            position: relative;
            width: 70px;
            height: 70px;
            animation: float 3s ease-in-out infinite;
        }

        .avatar-img {
            width: 100%;
            height: 100%;
            object-fit: contain;
            filter: drop-shadow(0 10px 10px rgba(0, 0, 0, 0.5));
        }

        .snap-label {
            background: var(--snap-pill);
            backdrop-filter: blur(10px);
            color: white;
            padding: 4px 14px;
            border-radius: 18px;
            font-size: 11px;
            font-weight: 700;
            margin-top: -5px;
            border: 1px solid rgba(255, 255, 255, 0.1);
            box-shadow: 0 4px 10px rgba(0, 0, 0, 0.3);
        }

        @keyframes float {

            0%,
            100% {
                transform: translateY(0);
            }

            50% {
                transform: translateY(-12px);
            }
        }

        /* --- CHAT VIEW UI --- */
        .chat-view {
            flex: 1;
            display: flex;
            flex-direction: column;
            background: var(--bg);
            position: relative;
        }

        .chat-header {
            padding: 15px 25px;
            display: flex;
            align-items: center;
            gap: 15px;
            border-bottom: 1px solid var(--glass-border);
            background: rgba(5, 6, 10, 0.7);
            backdrop-filter: blur(20px);
            z-index: 1500;
        }

        /* Hamburger Button */
        .menu-toggle {
            width: 40px;
            height: 40px;
            border-radius: 12px;
            background: var(--glass);
            border: 1px solid var(--glass-border);
            color: white;
            display: flex;
            align-items: center;
            justify-content: center;
            cursor: pointer;
            font-size: 20px;
        }

        .partner-avatar {
            width: 42px;
            height: 42px;
            border-radius: 12px;
            background: #222;
            overflow: hidden;
        }

        .partner-avatar img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .messages-container {
            flex: 1;
            overflow-y: auto;
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 10px;
            background: radial-gradient(circle at top right, #12121a, #05060a);
        }

        .msg {
            max-width: 80%;
            padding: 12px 18px;
            border-radius: 20px;
            font-size: 0.95rem;
            line-height: 1.4;
            position: relative;
        }

        .msg.sent {
            align-self: flex-end;
            background: linear-gradient(135deg, var(--accent), #5849d1);
            border-bottom-right-radius: 4px;
            box-shadow: 0 4px 15px rgba(108, 92, 231, 0.3);
        }

        .msg.received {
            align-self: flex-start;
            background: #1c1c1e;
            border: 1px solid var(--glass-border);
            border-bottom-left-radius: 4px;
        }

        /* --- SNAP-STYLE INPUT BAR --- */
        .input-area {
            padding: 15px 20px;
            background: #05060a;
            display: flex;
            align-items: center;
            gap: 12px;
            padding-bottom: max(15px, env(safe-area-inset-bottom));
        }

        .input-wrapper {
            flex: 1;
            background: #1c1c1e;
            border-radius: 25px;
            padding: 2px 15px;
            display: flex;
            align-items: center;
            border: 1px solid var(--glass-border);
        }

        .input-wrapper input {
            flex: 1;
            background: transparent;
            border: none;
            color: white;
            height: 44px;
            outline: none;
            font-size: 1rem;
        }

        .send-btn {
            width: 44px;
            height: 44px;
            background: var(--accent);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            border: none;
            cursor: pointer;
            transition: 0.2s;
        }

        .send-btn:active {
            transform: scale(0.9);
        }

        .stat-card {
            background: var(--glass);
            border-radius: 15px;
            padding: 14px;
            margin-bottom: 10px;
            border: 1px solid var(--glass-border);
        }

        .stat-label {
            font-size: 10px;
            color: var(--text-dim);
            text-transform: uppercase;
            letter-spacing: 0.5px;
            margin-bottom: 4px;
        }

        .stat-val {
            font-size: 13px;
            font-weight: 600;
            color: #fff;
        }

        #overlay-back {
            position: fixed;
            inset: 0;
            background: rgba(0, 0, 0, 0.6);
            z-index: 1900;
            display: none;
            backdrop-filter: blur(4px);
        }

        /* Auth Screen */
        #auth-screen {
            position: fixed;
            inset: 0;
            background: var(--bg);
            z-index: 5000;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .auth-box {
            width: 90%;
            max-width: 380px;
            text-align: center;
        }

        .auth-input {
            width: 100%;
            background: #1c1c1e;
            border: 1px solid var(--glass-border);
            border-radius: 15px;
            padding: 18px;
            color: white;
            margin-bottom: 12px;
            font-size: 16px;
            outline: none;
        }

        .leaflet-control-attribution,
        .leaflet-control-zoom {
            display: none !important;
        }
    </style>
</head>

<body>

    <div id="auth-screen">
        <div class="auth-box">
            <div class="logo-icon" style="margin: 0 auto 20px; width: 60px; height: 60px; font-size: 2rem;">S</div>
            <h1 style="margin-bottom: 30px;">Strenger Pro</h1>
            <input type="text" class="auth-input" placeholder="Enter Nickname">
            <button class="send-btn" style="width: 100%; border-radius: 15px; font-weight: 700; color: white;"
                onclick="enterApp()">START CHATTING</button>
        </div>
    </div>

    <div id="overlay-back" onclick="toggleSidebar()"></div>

    <div class="app-container">
        <aside class="sidebar" id="sidebar">
            <div class="logo-area">
                <div class="logo-box">
                    <div class="logo-icon">S</div>
                    <span style="font-weight: 700; font-size: 1.1rem;">STRENGER PRO</span>
                </div>
                <button class="menu-toggle" onclick="toggleSidebar()"
                    style="background: none; border: none; font-size: 24px;">‚úï</button>
            </div>

            <div class="map-card">
                <div class="map-header">üìç My Neighborhood</div>
                <div id="map"></div>
            </div>

            <div class="stat-card">
                <div class="stat-label">Security</div>
                <div class="stat-val" style="color: #34c759;">E2E Encryption Active</div>
            </div>
            <div class="stat-card">
                <div class="stat-label">Discovery</div>
                <div id="nearby-count" class="stat-val">Scanning Area...</div>
            </div>

            <button class="send-btn" onclick="nextMatch()"
                style="margin-top: auto; width: 100%; border-radius: 15px; background: #1c1c1e; color: var(--danger); font-size: 14px; font-weight: 600; height: 50px; border: 1px solid rgba(255,59,48,0.2);">
                SKIP STRANGER (ESC)
            </button>
        </aside>

        <main class="chat-view">
            <header class="chat-header">
                <button class="menu-toggle" onclick="toggleSidebar()">‚ò∞</button>
                <div class="partner-avatar" id="hdr-avatar">
                    <img src="https://em-content.zobj.net/source/apple/391/smiling-face-with-heart-eyes_1f60d.png"
                        alt="">
                </div>
                <div style="flex: 1;">
                    <div id="partner-name" style="font-weight: 700; font-size: 1.1rem;">Searching...</div>
                    <div style="font-size: 0.7rem; color: #34c759; display: flex; align-items: center; gap: 4px;">
                        <span style="width: 6px; height: 6px; background: #34c759; border-radius: 50%;"></span> Online
                    </div>
                </div>
                <div id="ping" style="font-size: 0.75rem; color: var(--text-dim);">8ms</div>
            </header>

            <div class="messages-container" id="messages">
                <div class="msg received">üëã Hi! Use the map on the left (or in the menu) to see people near you!</div>
            </div>

            <div class="input-area">
                <div class="input-wrapper">
                    <input type="text" id="msg-input" placeholder="Send a Snap chat..."
                        onkeydown="if(event.key=='Enter') sendMsg()">
                </div>
                <button class="send-btn" onclick="sendMsg()">
                    <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="white" stroke-width="2.5"
                        stroke-linecap="round" stroke-linejoin="round">
                        <line x1="22" y1="2" x2="11" y2="13"></line>
                        <polygon points="22 2 15 22 11 13 2 9 22 2"></polygon>
                    </svg>
                </button>
            </div>
        </main>
    </div>

    <script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
    <script>
        let map, markers = {};
        let myLoc = { lat: 28.6139, lon: 77.2090 };

        // Local Avatar Images
        const ASSETS = {
            male: "/static/imges/man.png",
            female: "/static/imges/girl.png"
        };

        function enterApp() {
            document.getElementById('auth-screen').style.opacity = '0';
            setTimeout(() => {
                document.getElementById('auth-screen').style.display = 'none';
                initMap();

                // Ready for real backend data via WebSocket
                // Backend will send: updateMap([{id, lat, lon, gender, name}, ...])

                // Example: Simulate backend (remove this in production)
                // setTimeout(() => {
                //     updateMap([
                //         { id: 1, lat: 28.6145, lon: 77.2100, gender: 'male', name: 'User123' },
                //         { id: 2, lat: 28.6130, lon: 77.2085, gender: 'female', name: 'User456' }
                //     ]);
                // }, 1000);
            }, 400);
        }

        function toggleSidebar() {
            const sb = document.getElementById('sidebar');
            const ov = document.getElementById('overlay-back');
            sb.classList.toggle('active');
            ov.style.display = sb.classList.contains('active') ? 'block' : 'none';
            if (map) setTimeout(() => map.invalidateSize(), 400);
        }

        function initMap() {
            map = L.map('map', { zoomControl: false }).setView([myLoc.lat, myLoc.lon], 15);
            L.tileLayer('https://{s}.basemaps.cartocdn.com/dark_all/{z}/{x}/{y}{r}.png').addTo(map);

            // Me Marker
            createMarker(myLoc.lat, myLoc.lon, 'You', 'male', true);
        }

        function createMarker(lat, lon, name, gender, isMe) {
            const icon = L.divIcon({
                className: 'snap-icon',
                html: `
                    <div class="snap-marker">
                        <div class="avatar-container">
                            <img src="${ASSETS[gender]}" class="avatar-img">
                        </div>
                        <div class="snap-label">${isMe ? 'Me' : name}</div>
                    </div>
                `,
                iconSize: [70, 90],
                iconAnchor: [35, 80]
            });
            return L.marker([lat, lon], { icon }).addTo(map);
        }

        function updateMap(users) {
            Object.values(markers).forEach(m => map.removeLayer(m));
            markers = {};
            users.forEach(u => {
                markers[u.id] = createMarker(u.lat, u.lon, u.name, u.gender, false);
            });
            document.getElementById('nearby-count').innerText = `${users.length} People Nearby`;
        }

        function sendMsg() {
            const inp = document.getElementById('msg-input');
            if (!inp.value.trim()) return;
            const msg = document.createElement('div');
            msg.className = 'msg sent';
            msg.innerText = inp.value;
            document.getElementById('messages').appendChild(msg);
            inp.value = '';
            const container = document.getElementById('messages');
            container.scrollTop = container.scrollHeight;
        }

        function nextMatch() {
            document.getElementById('messages').innerHTML = '<div class="msg received">Searching for a new stranger...</div>';
            document.getElementById('partner-name').innerText = 'Searching...';
        }

        window.addEventListener('keydown', e => { if (e.key === 'Escape') nextMatch(); });
    </script>
</body>

</html>